<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/standbyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Standby Monitoring"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/standbyDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enable background monitoring for emergency signals (WiFi patterns and phone call indicators)"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/standbyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/standbyMonitoringSwitch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/standbyMonitoringSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/standbyDescription"
        app:layout_constraintBottom_toBottomOf="@id/standbyDescription"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/standbyDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/autoActivateTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Auto-Activation"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/autoActivateDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Automatically activate emergency mode when an emergency indicator is detected (recommended)"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/autoActivateTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/autoActivateSwitch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/autoActivateSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/autoActivateDescription"
        app:layout_constraintBottom_toBottomOf="@id/autoActivateDescription"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/indicatorsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Emergency Indicators"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/autoActivateDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/indicatorsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="• WiFi networks with pattern '4people-*'\n• Brief incoming phone calls (less than 5 seconds)\n• Emergency broadcasts from other devices\n• WiFi Direct emergency devices"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/indicatorsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/indicatorsDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <TextView
        android:id="@+id/smsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SMS Emergency Broadcast"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/smsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send emergency SMS to predefined contacts when emergency mode is activated"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/smsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/smsEnabledSwitch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/smsEnabledSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/smsDescription"
        app:layout_constraintBottom_toBottomOf="@id/smsDescription"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <Button
        android:id="@+id/configureContactsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configure Contacts"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/smsDescription"
        app:layout_constraintStart_toStartOf="parent" />
        
    <TextView
        android:id="@+id/contactsCountText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0 contact(s) configured"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/configureContactsButton"
        app:layout_constraintBottom_toBottomOf="@id/configureContactsButton"
        app:layout_constraintStart_toEndOf="@id/configureContactsButton"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/configureContactsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <TextView
        android:id="@+id/flashlightTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Flashlight Morse Code"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/flashlightDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Use LED flash to send visual Morse code signals (visible up to 1km)"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/flashlightTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/flashlightMorseSwitch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/flashlightMorseSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/flashlightDescription"
        app:layout_constraintBottom_toBottomOf="@id/flashlightDescription"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/flashlightDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <TextView
        android:id="@+id/ultrasoundTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ultrasound Signaling"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ultrasoundTransmitDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Transmit ultrasound emergency signals (inaudible to humans)"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ultrasoundTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ultrasoundTransmitSwitch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/ultrasoundTransmitSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/ultrasoundTransmitDescription"
        app:layout_constraintBottom_toBottomOf="@id/ultrasoundTransmitDescription"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <TextView
        android:id="@+id/ultrasoundListenDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Listen for ultrasound emergency signals (recommended)"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ultrasoundTransmitDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ultrasoundListenSwitch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/ultrasoundListenSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/ultrasoundListenDescription"
        app:layout_constraintBottom_toBottomOf="@id/ultrasoundListenDescription"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
