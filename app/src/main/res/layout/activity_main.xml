<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/logButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/logButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_info_details"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/log_button_description"
        app:layout_constraintEnd_toStartOf="@id/settingsButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="4dp" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emergency_inactive"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        android:layout_marginTop="16dp" />

    <!-- Emergency Communication Card Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/emergencyCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeWidth="2dp"
        app:strokeColor="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Emergency Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¡"
                    android:textSize="18sp"
                    android:importantForAccessibility="no"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/emergency_communication_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32" />

                <ImageButton
                    android:id="@+id/emergencyHelpButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/help_emergency_mode_description" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/activateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activate_emergency"
                android:textSize="15sp"
                android:padding="12dp" />

            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/bluetoothStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bluetooth_status"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/wifiStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_status"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/hotspotStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hotspot_status"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />
                    
                <TextView
                    android:id="@+id/wifiConnectionStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_connection_status"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/locationStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location_sharing_status"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Infrastructure Status Section -->
            <TextView
                android:id="@+id/infrastructureHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infrastructure_status_header"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:id="@+id/infrastructureStatusLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@android:drawable/dialog_holo_light_frame">

                <TextView
                    android:id="@+id/infraBluetoothStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infra_bluetooth_status"
                    android:textSize="12sp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/infraWifiStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infra_wifi_status"
                    android:textSize="12sp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/infraCellularStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infra_cellular_status"
                    android:textSize="12sp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/infraMeshStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infra_mesh_status"
                    android:textSize="12sp"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:id="@+id/infraOverallStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/infra_overall_status"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Location Action Buttons -->
            <LinearLayout
                android:id="@+id/locationButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/viewLocationsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/view_locations"
                    android:layout_marginEnd="4dp"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sendHelpButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/send_help_request"
                    android:backgroundTint="#FF5722"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Simulation Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/simulationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_simulation"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Panic Mode Card Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/panicCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeWidth="2dp"
        app:strokeColor="#D32F2F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergencyCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Panic Mode Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš¨"
                    android:textSize="18sp"
                    android:importantForAccessibility="no"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/panic_mode_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#C62828" />

                <ImageButton
                    android:id="@+id/panicHelpButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/help_panic_mode_description" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/panicModeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activate_panic"
                android:textSize="15sp"
                android:padding="12dp"
                android:backgroundTint="#D32F2F" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/scanningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scanning_for_emergencies"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panicCard"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
