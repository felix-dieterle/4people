<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfflineMapActivity">

    <!-- OSM Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/legendLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Legend and Controls -->
    <LinearLayout
        android:id="@+id/legendLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/legendTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map Legend"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/legendParticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŸ¢ Network Participants"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/legendHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ†˜ Help Requests"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/legendSafeZones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ  Safe Zones"
            android:textSize="12sp" />

        <Button
            android:id="@+id/centerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Center on My Location"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

    <!-- Floating Action Button to add safe zones -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addSafeZoneFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add Safe Zone"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toTopOf="@+id/legendLayout"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
